@model NewContactGroupViewModel

@{
    ViewData["Title"] = "Create a new Contact Group";
}


<form asp-controller="Contact" asp-action="NewContactGroup" method="post" class="form-horizontal" role="form">
    <div class="form-horizontal">
        <h4>Create a new Contact Group</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary btn-block">Create</button>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="All">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
